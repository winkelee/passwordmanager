<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft.passwordmanager.DetailsController"
            prefHeight="400.0" prefWidth="600.0">
    <HBox>
        <VBox>
            <Label text="Website" fx:id="websiteLabel"/>
            <TextField fx:id="usernameField"/>
            <HBox>
                <TextField fx:id="passwordField"/>
                <Button fx:id="copyButton" text="Copy"/>
            </HBox>
        </VBox>
        <Button fx:id="editButton" text="Edit"/>
        <Button fx:id="deleteButton" text="Delete"/>
    </HBox>
</AnchorPane>
