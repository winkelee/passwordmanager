<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft.passwordmanager.SignUpController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="baseLayout">

    <VBox spacing="10">
        <VBox>
            <Label fx:id="signupLabelOne" text="It looks like you are booting this application for the first time."/>
            <Label fx:id="signupLabelTwo" text="Please create a master password."/>
        </VBox>
        <HBox spacing="20">
            <TextField fx:id="masterPasswordField" promptText="Enter password here..."/>
            <Button fx:id="addButton" text="Create"/>
        </HBox>
    </VBox>

</AnchorPane>
