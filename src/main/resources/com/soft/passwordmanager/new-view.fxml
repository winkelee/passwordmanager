<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.soft.passwordmanager.ImportController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="baseLayout">
    <VBox spacing="15" alignment="TOP_LEFT" fx:id="layout">
        <Label text="Add new credentials." fx:id="newCredentialsLabel"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Add new credentials via import (csv)." fx:id="importLabel"/>
            <Button text="Import..." fx:id="importButton" id="importButton"/>
        </HBox>
        <VBox spacing="10">
            <Label text="Or add new credentials natively" fx:id="nativeLabel"/>
            <HBox>
                <TextField promptText="Username..." fx:id="addUsernameField"/>
                <TextField promptText="Password..." fx:id="addPasswordField"/>
                <TextField promptText="URL..." fx:id="addURLField"/>
                <Button fx:id="addButton" text="Add"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
